<Window x:Class="TeaChat.SetIpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeaChat"
        mc:Ignorable="d"
        Title="SetIpWindow" Height="150" Width="200">
    <StackPanel>
        <Label Content="請輸入Server IP：" HorizontalAlignment="Center" Margin="0,11,0,0"></Label>
        <TextBox x:Name="textBoxSetIp" HorizontalAlignment="Center" Width="95" Margin="0,3,0,6"/>
        <Button x:Name="buttonSetIp" Content="確認" HorizontalAlignment="Center" Margin="0" Click="buttonSetIp_Click"/>
    </StackPanel>
</Window>
