<Window x:Class="TeaChat.Audio.ConferenceCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeaChat.Audio"
        mc:Ignorable="d"
        Title="Tea Chat" Height="300" Width="220" Closed="Window_Closed">
    <Grid>
        <Image x:Name="stateImage" Height="100" Margin="56,120,56,23" Width="100"/>
        <TextBox x:Name="stateTextBox" HorizontalAlignment="Stretch" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Margin="0,50,0,0" FontSize="18" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" TextAlignment="Center"/>
        <Button x:Name="stateButton" Content="" Margin="56,120,56,23" Width="100" Height="100" ClickMode="Press" Click="stateButton_Click" BorderBrush="White" Background="#FFFFFEFE"/>

    </Grid>
</Window>
